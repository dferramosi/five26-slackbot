rules = [
  "1: **DON'T BE A DICK**",
  "2. **Anything** said in five26 _STAYS_ in five26",
  "3. **BE A DICK**",
  "4. GOTO 3 motherfucker"
  ]

otherRules = [
  "UP time is better than DOWN time.",
  "Work remote as often as possible.",
  "Ask for more money regularly."
  ]

module.exports = (robot) ->
  robot.respond /(what are )?the (rules)/i, (msg) ->
    text = msg.message.text
    if text.match(/jobs/i) or text.match(/career/i)
      msg.send otherRules.join('\n')
    else
      msg.send rules.join('\n')
